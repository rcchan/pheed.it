shadow-color = rgba(102, 102, 102, .4)

.publisher
  margin inherit
  overflow hidden

  > div
    background url(/assets/publisher-bg.png) repeat
    color rgb(153, 102, 51)
    //box-shadow 0 8px 15px -8px shadow-color inset
    font-family "museo"
    padding 0 20px 20px
    overflow hidden
    
    input, textarea, .token-input-list-facebook
      background-color rgba(255,255,255,.6)
      font-family "Garamond"
      color black
      height inherit
    
    .title, .message
      display block
      width 100%
      
    .title
      font-size 18px
      border-radius 5px
      font-weight bold
      margin 15px 0 8px 0
      padding 3px 5px

    .publishertype
      margin-bottom 0
      text-align center
      
      .publish_buttons
        display inline-block
        text-shadow 0 1px 1px rgba(0, 0, 0, .6)
        
        .button
          display inline-block
          min-width 41px
          color white
          font-family "museo"
          font-size 14px
          bg-gradient(rgb(30,180,255), rgb(80,84,255))
          padding 0 7px
          margin-bottom 0
          box-shadow 0 0 3px 1px shadow-color
          &:first-child
            border-top-left-radius 5px
            width 42px
          &:nth-child(6)
            border-top-right-radius 5px
          &.selected,&:hover
            bg-gradient(rgb(0,150,255), rgb(50,54,255))
            cursor pointer
            
      .publisher_extras
        border-left 1px solid #CCC
        border-right 1px solid #CCC

        .upload
          display none
          margin 0
          .embedtype
            display none
          .embed
            display none
            height 30px
          .file
            position relative
            input
              position absolute
              top 0
              left 0
              opacity 0
            .addfile
              top 0
              left 0
              height 30px
              text-align center
              line-height 30px
              bg-gradient(hsl(120, 45, 68), hsl(120, 34, 58))
              border-bottom-color: rgba(0, 0, 0, 0.246094);
              box-shadow rgba(255, 255, 255, 0.199219) 0px 1px 0px 0px inset, rgba(0, 0, 0, 0.046875) 0px 1px 2px 0px;
              border-bottom-color: rgba(0, 0, 0, 0.246094);
              border-bottom-left-radius: 4px;
              border-bottom-right-radius: 4px;
              border-bottom-style: solid;
              border-bottom-width: 1px;
              border-left-color: rgba(0, 0, 0, 0.0976563);
              border-left-style: solid;
              border-left-width: 1px;
              border-right-color: rgba(0, 0, 0, 0.0976563);
              border-right-style: solid;
              border-right-width: 1px;
              border-top-color: rgba(0, 0, 0, 0.0976563);
              border-top-left-radius: 4px;
              border-top-right-radius: 4px;
              border-top-style: solid;
              border-top-width: 1px;
              color: rgb(255, 255, 255);
              text-shadow: rgba(0, 0, 0, 0.246094) 0px -1px 0px;
              &.loaded
                bg-gradient(hsl(120, 45, 58), hsl(120, 34, 48))
        .eventinfo
          display none
          background rgba(255, 255, 255, 0.6)
          padding-top 10px
          margin-bottom 0
          > div
            > label
              > span
                display inline-block
                text-align left
                width 60px

    textarea
      height 196px
      font-size 14px
      border-bottom 1px solid #CCC
      border-top none
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px
      
    .pheedto, .token-input-list-facebook
      height 32px
      border-radius 5px
      padding 0 5px
      margin-right 5px
  
    .pheedit
      display block
      float none
      position relative
      text-align center
      height 30px
      overflow hidden
      width auto
      text-shadow 0 1px 1px shadow-color = rgba(102, 102, 102, .6)
      
      input
        position absolute
        top 0
        left 0
        border none
        box-shadow 0 3px 15px -3px shadow-color
        max-width 100%
        max-height 100%
        background none
        
      span
        position relative
        color white
        font-size 16px
        font-weight bold
        line-height 30px
        cursor pointer
        
    .private, .location
      display inline
      margin-right 10px
        
      span
        margin 0 5px
