body
  background rgb(0, 150, 255)
  font-family Helvetica

.topbar
  width 100%
  height 40px
  background rgb(0,150,255)
  background -moz-linear-gradient(top, rgb(0,150,255) 0%, rgb(50,54,255) 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgb(0,150,255)), color-stop(100%,rgb(50,54,255)))
  background -webkit-linear-gradient(top, rgb(0,150,255) 0%,rgb(50,54,255) 100%)
  background -o-linear-gradient(top, rgb(0,150,255) 0%,rgb(50,54,255) 100%)
  background -ms-linear-gradient(top, rgb(0,150,255) 0%,rgb(50,54,255) 100%)
  background linear-gradient(top, rgb(0,150,255) 0%,rgb(50,54,255) 100%)
  margin-bottom 10px
  
  #topbar
    width 1010px
    margin auto
    color white
    font-size 30px

#content
  text-align center
  
  .column
    display inline-block
    width 330px
    margin 10px 20px
    vertical-align top
    
  .container
    margin-bottom 20px
    
    .heading
      width 310px
      height 20px
      border-top-left-radius 15px
      border-top-right-radius 15px
      padding 10px
      color white
      text-align left
      font-size 24px
      background rgb(155, 255, 125)

.post
  width 320px
  padding 5px 10px 10px 0
  background white
  border-bottom 2px solid #CCC
  
  .title
    width 320px
    white-space nowrap
    
    *
      white-space normal
      
    .image
      display inline-block
      width 50px
      height 50px
      vertical-align middle
      padding 5px
      
      img
        max-width 50px
        max-height 50px
        
    .text
      vertical-align middle
      font-size 18px
      
  .controls
    display inline-block
    vertical-align top
    padding 5px
    font-size 0
    
    div
      padding 3px 0
      
      div
        display inline-block
        width 25px
        text-align center
        
        img
          max-width 25px
          max-height 25px
          margin auto
          
  .text
    display inline-block
    width 260px
    vertical-align top
    text-align justify
    font-size 14px

.publisher
  background white
  padding 5px 15px
  
  > *
    margin 5px 0
  
  div > input
    width 296px