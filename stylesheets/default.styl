@font-face
  font-family "Gotham Rounded"
  src url(/GothamRnd-MedItal.otf)
  font-style italic
@font-face
  font-family "Gotham Rounded"
  src url(/GothamRnd-Light.otf)
  font-weight 100
@font-face
  font-family "Gotham Rounded"
  src url(/GothamRnd-LightItal.otf)
  font-weight 100
  font-style italic
@font-face
  font-family "Gotham Rounded"
  src url(/GothamRnd-Book.otf)
