shadow-color = rgba(102, 102, 102, .4)
  
bg-gradient(c1, c2)
  background c1
  background -moz-linear-gradient(top, c1 0%, c2 100%)
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,c1), color-stop(100%,c2))
  background -webkit-linear-gradient(top, c1 0%,c2 100%)
  background -o-linear-gradient(top, c1 0%, c2 100%)
  background -ms-linear-gradient(top, c1 0%, c2 100%)
  background linear-gradient(top, c1 0%, c2 100%)
  
* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }
  
@import fonts
@import topbar
@import post
@import controls
@import publisher

.bold
  font-weight bold

.underline
  text-decoration underline

.lr
  position relative
  overflow hidden
  > *:first-child
    float left
  > *:last-child
    float right

.aleft
  text-align left

body
  min-width 330px
  font-size inherit
  background url(images/bg.png) repeat
  font-family Helvetica

#content
  text-align center
  margin 0 auto
  margin-top 50px
  max-width 1110px

  .column
    display inline-block
    vertical-align top
    margin 10px 20px 20px 20px
    width 330px
  
    > .container
      display inline-block
      vertical-align top
      margin 10px 20px 20px 20px
      text-align left
      width 330px

      > div:not(.ui-resizable-handle)
        box-shadow 0 0 10px 0px shadow-color

      .heading
        border-top-left-radius 10px
        border-top-right-radius 10px
        padding 7px 10px 13px 10px
        color white
        text-align left
        font-family "helvetica neue",arial,helvetica,freesans,"liberation sans","numbus sans l",sans-serif
        font-size 24px
        font-weight bold
        //bg-gradient(rgb(177, 255, 153), rgb(138, 255, 102))
        background url(images/container-heading-bg.png) repeat

      .content
        background url("images/post-bg.png") repeat

      .footing
        height 0
        border-bottom-left-radius 10px
        border-bottom-right-radius 10px
        padding 10px
        background url(images/post-bg.png) repeat

