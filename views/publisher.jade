form(id='poster',enctype='multipart/form-data',action='/post',method='post')
  div(class='publisher')
    div
      input(name='title',class='title greyed',value='Title your post here')
    div(class='lr')
      span(class='bold') Link Text
      span 40
    div
      div(class='button selected') text
      div(class='button') photo
      div(class='button') audio
      div(class='button') video
      div(class='upload')
        input(type='file',id='file',name='file')
      textarea(name='message', class='message greyed') Enter your text here
    div(class='lr')
      span(class='bold') pheed.to
      span 400
    div(class='lr')
      div
        div
          input(name='pheedto',class='pheedto greyed',value='pheed.it user or email(s)')
        div(class='lr')
          label
            input(type='checkbox', id='private')
            span private message
          label
            input(type='checkbox', id='location')
            span
              !=img_tag('images/location.svg', 'location')
      div(class='pheedit')
        !=img_tag('images/pheedit.svg', 'pheed it!')
        span pheed.it
